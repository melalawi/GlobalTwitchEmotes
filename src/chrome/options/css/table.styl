$tableGradient = linear-gradient(to bottom, #e7e7e7 0%, $backgroundColor 100%)

table
    width 100%
    margin 3.0em 0
    border-collapse collapse
    table-layout fixed

    text-align left
    font-size 1.25em

    background $tableGradient

th
    width 100%
    font-size 1.25em

.fileBrowser
    opacity 0
    position absolute
    left -1000px
    top -1000px

.controlCell
    width 32px
    height 32px
    white-space nowrap

.controlCell input[type=button]
    width 32px
    height 100%

    background-color $backgroundColor
    background-size 50%
    background-position center center
    background-repeat no-repeat

    cursor pointer
    border 1px solid $navbarBackgroundColor
    border-radius 2px

.controlCell input[type=button].deleteRowButton
    background-image url('/options/images/trash.png')

.controlCell input[type=button].addRowButton
    background-image url('/options/images/plus.png')

table#customEmotesList td.url
    height 32px
    width 30%

    display flex
    flex-direction row
    justify-content space-between
    align-items center

table#customEmotesList td.url:first-child
    padding-left 1.0em
table#customEmotesList td.url:last-child
    padding-right 1.0em

.browseButton
    padding 0 0.25em
    margin-right 1.0em

.emoteContainer
    margin 0 0.25em

    display flex
    flex-direction row
    justify-content center
    align-items center

    border 1px solid #dedede

.emote
    max-height 32px
    max-width 32px

.emoteError
    font-weight bold
    color $errorColor
    white-space nowrap

table select
    width 100%
    height 100%

table input[type=text]:disabled
    color rgba(0, 0, 0, 0)

table input[type=text]:disabled::-webkit-input-placeholder
    color rgba(0, 0, 0, 0)

table input[type=text]:disabled::-moz-placeholder
    color rgba(0, 0, 0, 0)

table input[type=text]
    width 100%
    height 32px
    padding-left 0.25em

    font-size: 1.10em
    color $navbarButtonActiveColor
    border 1px solid $navbarBackgroundColor

table input[type=text]::-webkit-input-placeholder
    font-style italic
    color $navbarBackgroundColor

table input[type=text]::-moz-placeholder
    font-style italic
    color $navbarBackgroundColor

td.nothingHere
    width 100%

    background-color #ffffff
    border-top 1px solid $disabledButtonColor
    border-bottom 1px solid $disabledButtonColor

    color $disabledButtonColor
    line-height 3.0em
    text-align center
    font-style italic
